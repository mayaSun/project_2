      = link_to admin_orders_path, class: (nav_active(admin_orders_path) + ' list-group-item') do
        %i.fa.fa-bell{:title => "Orders"}
        %span הזמנות
      = link_to admin_stock_path, class: (nav_active(admin_stock_path) + ' list-group-item') do 
        %i.fa.fa-flag{:title => "Stock"} 
        %span ניהול מלאי
