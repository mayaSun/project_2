.product-col
  .row
    .col-md-7
      .caption
        %h4
          = link_to essential_oil_path(essential_oil) do
            שמן #{essential_oil.name}  
      %form.form-horizontal
        .form-group
          .row
            .col-xs-6
              = link_to admin_essential_oil_path(essential_oil), method: :delete, :data => {:confirm => 'חשוב טוב!!! האם אתה בטוח שברצונך למחוק שמן אתרי זה?'}, class: 'btn btn-remove' do
                מחק
                %i.fa.fa-remove          
            .col-xs-6
              = link_to edit_admin_essential_oil_path(essential_oil), class: 'btn btn-update' do
                ערוך  
                %i.fa.fa-pencil-square-o             
    .col-md-5
      = link_to essential_oil_path(essential_oil) do
        .image
          %img.img-responsive{:alt => "essential_oil", :src => essential_oil.image}/