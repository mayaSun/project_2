.panel.panel-smart
  .panel-heading
    %h3.panel-title
      = @active_ingredient.new_record? ? 'חומר פעיל' : '  עדכן חומר פעיל'
  .panel-body    
    = bootstrap_form_for [:admin, @active_ingredient], layout: :horizontal do |f|
      .col-sm-5.col-sm-offset-7.col-xs-12
        .admin-product-form-row
          = f.text_field :name, label: '*שם:', placeholder: 'שם החומר', label_col: "col-sm-3.col-sm.push-9", control_col: "col-sm-9"
        .admin-product-form-row
          = f.text_field :english_name, label: '*שם באנגלית:', placeholder: 'שם באנגלית', label_col: "col-sm-3.col-sm.push-9", control_col: "col-sm-9"
      = f.text_area :description, label: '*תיאור:', label_col: "col-sm-1.col-sm-push-11", control_col: "col-sm-11", rows: '4' 
      = f.collection_check_boxes :medicinal_herb_ids, MedicinalHerb.all, :id, :name, label: 'צמחי מרפא:', inline: true, label_col: "col-sm-2.col-sm-push-10", control_col: "col-sm-10" 
      .col-sm-12.col-xs-12  
        = f.submit @active_ingredient.new_record? ? 'הוסף' : 'עדכן', class: "btn btn-add" , id: 'active_ingredient-form-submit'
